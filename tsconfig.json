{
  "include": ["*/src", "*/typings"],
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "ESNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  }
}
